generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model WorkHeroSection {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  imageUrl    String?
}

model WorkResearchSection {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  heading String
  images  String[]
}

model WorkDangerSection {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  title1     String
  title2     String
  title3     String
  title4     String
  paragraph1 String
  paragraph2 String
  paragraph3 String
  paragraph4 String
  paragraph5 String
  paragraph6 String
  images     String[]
}

model WorkImpactSection {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  heading  String
  imageUrl String?
  images   String[]
}

model WorkSolutionSection {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  heading   String
  paragraph String
  subTitle  String
  images    String[]
}

model WorkLifeCycleSection {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl String?
}

model WorkMaterialsSection {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  heading  String
  imageUrl String?
  images   String[]
}

model WorkModalSection {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  title  String
  images String[]
}

model WorkRenderSection {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  paragraph String
  imageUrl  String?
}
